<div class="container">
  <h1>Anonymous Blog</h1>
  <% if @error_message %>
  <%= "<h3>ERRORS:  #{@error_message} </h3>" %>
  <% end %>
  <br>
  <form action="/posts/new" method="post">
    Fill in your post information:
    <br>
    <input type="text" name="title" value="Post Title">
    <input type="text" name="tags" value="tag1, tag2, tag3, etc.">
    <textarea rows="8" cols="50" name ="post_text">Blog Post</textarea>
    <input type="submit" value="Submit">
  </form>


</div>
